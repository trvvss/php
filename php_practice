  <?php
    $people = array("Alice", "Bob", "Catherine");
    
    print_r($people); //print the array
    
    echo $people[2]; //echo 2nd element of array aka catherine
    
    //to loop through array (very useful!!):
    foreach ($people as $person)
    {
      echo $person . ' '; //string is a space
    }
    
    $numbers = array(5, 3, 7);
    $sum = 0
    foreach ($numbers as $number)
    {
      $sum = $sum + $number;
    }
      echo $sum;
  ?>
  
